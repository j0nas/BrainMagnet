<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <p><div class="input-group">
  <span class="input-group-addon"><%= f.label :email %></span>
  <%= f.email_field :email, class:"form-control", autofocus:true, autocomplete: true %>
</div></p>

    <p><div class="input-group">
  <span class="input-group-addon"><%= f.label :password %></span>
  <%= f.password_field :password, class:"form-control" %>
</div></p>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

    <p><input type="submit" name="commit" value="Log in" class="btn btn-default"></p>
<% end %>

<%= render "devise/shared/links" %>
